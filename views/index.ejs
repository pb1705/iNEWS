<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="css/utils.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/mobile.css">
    <title>iBlog - Heaven for bloggers</title>
</head>

<body>
    <nav class="navigation max-width-1 m-auto">
        <div class="nav-left">
            <a href="/">
                <span><img src="/img/logo.png" width="94px" alt=""></span>
            </a>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </div>
        <div class="nav-right">
            <form action="/" method="post">
                <select id="selected" class="form-select form-input"  aria-label="Default select example">
                    <option selected>Search for a specific category</option>
                    <option value="business">Business</option>
                    <option value="entertainment">Entertainment</option>
                    <option value="environment">Environment</option>
                    <option value="food">Food</option>
                    <option value="health">Health</option>
                    <option value="politics">Politics</option>
                    <option value="top">Top</option>
                    <option value="tourism">Tourism</option>
                    <option value="world">World</option>
                    <option value="sports">Sports</option>
                    <option value="science">Science</option>
                    <option value="technology">Technology</option>
                  </select>
                
                  <input type="text" name="category" id="searchcategory" style="position: absolute; opacity: 0;">
                <button id="searchbtn" class="btn">Search</button>

            </form>

        </div>

    </nav>
    <div class="max-width-1 m-auto">
        <hr>
    </div>
    <div class="m-auto content max-width-1 my-2">
        <div class="content-left" id="main-highlighted">
            <a id="mainlink" class="" href=<%=articles[0].link %>><h1 id="mainheading">
                    <%= articles[0].title %>
                </h1></a>
            <div id="description-main">
                <p>
                    <%= articles[0].content.substr(0,500) %>
                </p>
            </div>
        </div>
        <div class="content-right">
            <img src="img/logo.png" id="mainphoto" alt="iBlog">
        </div>
    </div>

    <div class="max-width-1 m-auto">
        <hr>
    </div>
    <div id="topstorieslist" class="home-articles max-width-1 m-auto font2">
        <h2>Top Stories</h2>
        <% for(let i=1;i<Math.min(articles.length,11);i++){ %>


            <div class="home-article">
                <div class="home-article-img">
                    <img src="img/logo.png" alt="article.png">
                </div>
                <div class="home-article-content font1">
                    <a href=<%=articles[i].link%>><h3>
                            <%= articles[i].title%>
                        </h3></a>
                </div>
            </div>
            <% }; %>

    </div>

    <div class="footer">
        <p>Copyright &copy; iNews.com </p>
        <a href="https://www.vecteezy.com/free-vector/typewriter">Vector Credits: Vecteezy</a>
    </div>
    
   <script>
    document.querySelector("#selected").addEventListener('change',()=>{
        document.querySelector("#searchcategory").value = document.querySelector("#selected").value
        console.log(document.querySelector("#searchcategory").value)
    })
   </script>
</body>

</html>